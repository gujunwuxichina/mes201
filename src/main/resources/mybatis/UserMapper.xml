<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gujun.mes201.dao.UserMapper">

    <select id="getById" resultType="user" parameterType="int">
        select
            uId,username,password
        from
            user_tab
        where
            uId=#{uId}
    </select>

    <select id="getByName" resultType="user" parameterType="string">
        select
            uId,username,password,phone
        from
            user_tab
        where
            username=#{username}
    </select>

    <select id="getAll" resultType="user">
        select
            uId,username,password
        from
            user_tab
    </select>

    <select id="getCount" resultType="int">
        select
            count(*)
        from
            persistent_logins
    </select>

    <delete id="deletePersistent" parameterType="string">
        DELETE
        a
        FROM
        persistent_logins as a,(
        SELECT
        top 1
        last_used
        FROM
        persistent_logins
        WHERE
        username=#{username}
        ORDER BY last_used DESC
--         LIMIT 0,1
        ) as b
        WHERE
            a.last_used &lt; b.last_used
        and
            a.username=#{username}
    </delete>

    <delete id="deletePersistentByUsername" parameterType="string">
        delete
        from
        persistent_logins
        where
            username=#{username}
    </delete>

</mapper>